<%- include('parts/header')%>
<%- include('parts/navbar')%>
<div class="container text-center">
    <h3>create account</h3>
    <form action="/signup" method="post">
        <input type="text" class="form-control" name="Username" placeholder="Username">
        <% let usernameError =validationErrors.find(err => err.param === 'username')%>
        <%if (usernameError){%>
            <p class="alert alert-danger">
                <%= usernameError.msg%>

            </p>
       <% }%>

        <input type="email" class="form-control" name="email" placeholder="Email">
        <% let emailError =validationErrors.find(err => err.param === 'email')%>
        <%if (emailError){%>
            <p class="alert alert-danger">
                <%= emailError.msg%>

            </p>
       <% }%>
        <input type="password" class="form-control" name="password" placeholder="password">
        <% let passwordError =validationErrors.find(err => err.param === 'password')%>
        <%if (passwordError){%>
            <p class="alert alert-danger">
                <%= passwordError.msg%>

            </p>
       <% }%>
        <input type="password" class="form-control" name="confirm-password" placeholder="confirm-password">
        <% let passwordConfirmError =validationErrors.find(err => err.param === 'passwordConfirm')%>
        <%if (passwordConfirmError){%>
            <p class="alert alert-danger">
                <%= passwordConfirmError.msg%>

            </p>
       <% }%>
        <input type="submit" value="Create-acount" class="btn btn-primary">
    </form>
    
     <%if(authError) { %>
        <br>
    <p class="alert alert-danger">
        <%= authError %>
    </p>
     <%}%>
     
        
<br>

<div>
    Already have account? <a href="/login">login</a>
</div>
</div>
<%- include('parts/footer')%>